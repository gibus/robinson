;----------// Theme informations

name = "robinsontheme"
description = "Drupal theme for leprojetrobinson.org, by Julien"
version = "7.x-0.2"
core = "7.x"
engine = "phptemplate"


;----------// Styles

stylesheets[all][] = "css/styles.css"


;----------// Scripts

scripts[] = "libraries/bootstrap/dist/js/bootstrap.min.js"
scripts[] = "libraries/froogaloop.js"
scripts[] = "libraries/soundcloud-sdk.js"
scripts[] = "js/script.js"


;----------// Regions

regions[header]  = Header
regions[help]    = Help
regions[content] = Content
regions[footer]  = Footer


;----------// Features

features[] = logo
features[] = favicon
features[] = name
features[] = slogan
features[] = search
features[] = comment_user_picture
features[] = main_menu
features[] = secondary_menu